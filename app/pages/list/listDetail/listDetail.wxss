.top-Area {
  margin: 30rpx;
  justify-content: space-between;
  font-size: 40rpx;
  font-weight: bold;
}
.top-Area view {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.top-Area .top-Area-inputView {
  border-radius: 10rpx;
  padding: 0 20rpx;
  height: 80rpx;
}
.top-Area .top-Area-icon {
  width: 50rpx;
  height: 50rpx;
  margin: 0 30rpx;
}
.addIcon {
  position: fixed;
  bottom: 80px;
  right: 40px;
}
.addIcon image {
  width: 100rpx;
  height: 100rpx;
}
.teamPop {
  background-color: white;
  padding: 40rpx;
  width: 500rpx;
  border-radius: 20rpx;
  text-align: center;
}
.teamPop .teamPop-topRow {
  justify-content: space-between;
  font-size: 36rpx;
  font-weight: bold;
  color: #2c2c2c;
  margin-bottom: 70rpx;
}
.teamPop .teamPop-topRow .teamPop-topRow-information {
  font-size: 20rpx;
  text-align: left;
}
.teamPop .teamPop-topRow .teamPop-topRow-button view {
  width: 60rpx;
  font-size: 24rpx;
  font-size: normal;
}
.teamPop .teamPop-matePart {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-evenly;
  width: 100%;
}
.teamPop .teamPop-matePart .teamPop-matePart-part {
  margin-top: 20rpx;
  width: 120rpx;
}
.teamPop .teamPop-matePart .teamPop-matePart-part .teamPop-matePart-name {
  font-size: 26rpx;
}
